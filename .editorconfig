# EditorConfig helps maintain consistent coding styles and file handling across editors
# See https://editorconfig.org for details

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Rust files follow rustfmt defaults (4 spaces)
[*.rs]
indent_style = space
indent_size = 4

# Ignore files: treat as plain text
[*.gitignore]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false

[*.ignore]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false

[.markdownlintignore]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false

[*.yml]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
