{
	"name": "stack-composer",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"clean:macos": "find . -name '.DS_Store' -type f -delete && find . -name '._*' -type f -delete",
		"lint": "pnpm run clean:macos && eslint . --ext .js,.ts,.tsx && pnpm mdlint && vale docs/",
		"mdlint": "markdownlint-cli2 \"**/*.md\" \"#**/node_modules/**\" \"#**/dist/**\" \"#**/target/**\" \"#**/book/**\" \"#**/.git/**\" \"#**/.husky/**\" \"#**/.vscode/**\" \"#**/.idea/**\" \"#.trunk/**\" \"#**/.trunk/**\"",
		"mdlint:fix": "markdownlint-cli2 \"**/*.md\" \"#**/node_modules/**\" \"#**/dist/**\" \"#**/target/**\" \"#**/book/**\" \"#**/.git/**\" \"#**/.husky/**\" \"#**/.vscode/**\" \"#**/.idea/**\" \"#.trunk/**\" \"#**/.trunk/**\" --fix",
		"test": "vitest run",
		"format": "prettier --write .",
		"preview-wizard": "vite --config vite.wizard.config.ts",
		"rust:build": "pnpm run clean:macos && cargo build --manifest-path rust-backend/Cargo.toml",
		"rust:test": "pnpm run clean:macos && cargo test --manifest-path rust-backend/Cargo.toml",
		"rust:run": "pnpm run clean:macos && cargo run --manifest-path rust-backend/Cargo.toml",
		"dev": "pnpm run clean:macos && vite",
		"build": "pnpm run clean:macos && vite build",
		"preview": "pnpm run clean:macos && vite preview",
		"test:ui": "vitest --ui",
		"tauri:build": "pnpm run clean:macos && pnpm tauri build # Use Yarn only for edge cases (see README)",
		"tauri:dev": "pnpm run clean:macos && pnpm tauri dev # Use Yarn only for edge cases (see README)"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.2",
		"@eslint/js": "^9.29.0",
		"@stryker-mutator/core": "9.0.1",
		"@tauri-apps/cli": "^2.5.0",
		"@testing-library/jest-dom": "6.6.3",
		"@types/node": "24.0.3",
		"@typescript-eslint/eslint-plugin": "^8.34.1",
		"@typescript-eslint/parser": "^8.34.1",
		"@vitejs/plugin-react": "4.5.2",
		"@vitest/coverage-v8": "3.2.4",
		"@vitest/ui": "3.2.4",
		"dagre": "0.8.5",
		"eslint": "9.29.0",
		"eslint-plugin-jsx-a11y": "6.10.2",
		"eslint-plugin-react": "^7.37.5",
		"husky": "9.1.7",
		"jsdom": "26.1.0",
		"markdown-link-check": "3.13.7",
		"markdownlint-cli2": "0.18.1",
		"prettier": "3.5.3",
		"react-arborist": "3.4.3",
		"reactflow": "11.11.4",
		"stylelint-config-standard": "^38.0.0",
		"stylelint-config-tailwindcss": "^1.0.0",
		"stylelint-order": "^7.0.0",
		"svgo": "^3.3.2",
		"tippy.js": "6.3.7",
		"trunk": "1.1.0",
		"typescript": "^5.8.3",
		"vite": "6.3.5",
		"vitest": "3.2.4",
		"zod": "3.25.67"
	},
	"dependencies": {
		"@supabase/functions-js": "2.4.4",
		"@tauri-apps/api": "^2.5.0",
		"axios": "1.10.0",
		"inquirer": "12.6.3",
		"node-fetch": "3.3.2",
		"react": "19.1.0",
		"react-d3-tree": "3.6.6",
		"react-dom": "19.1.0"
	},
	"husky": {
		"deprecated": false
	},
	"packageManager": "pnpm@10.12.1"
}
