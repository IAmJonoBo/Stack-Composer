{
	"name": "stack-composer",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"lint": "eslint . --ext .js,.ts,.tsx && markdownlint docs/**/*.md && vale docs/",
		"test": "vitest run",
		"format": "prettier --write .",
		"prepare": "husky install",
		"preview-wizard": "vite --config vite.wizard.config.ts",
		"rust:build": "cargo build --manifest-path rust-backend/Cargo.toml",
		"rust:test": "cargo test --manifest-path rust-backend/Cargo.toml",
		"rust:run": "cargo run --manifest-path rust-backend/Cargo.toml",
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"test:ui": "vitest --ui"
	},
	"devDependencies": {
		"@stryker-mutator/core": "^9.0.1",
		"@testing-library/jest-dom": "^6.6.3",
		"@vitejs/plugin-react": "^4.5.2",
		"dagre": "latest",
		"eslint": "latest",
		"eslint-plugin-jsx-a11y": "latest",
		"husky": "^9.0.0",
		"jsdom": "^26.1.0",
		"markdownlint-cli": "latest",
		"prettier": "latest",
		"react-arborist": "latest",
		"reactflow": "latest",
		"tippy.js": "latest",
		"trunk": "latest",
		"vitest": "latest",
		"zod": "latest",
		"@types/node": "latest"
	},
	"dependencies": {
		"@supabase/functions-js": "latest",
		"react": "latest",
		"react-d3-tree": "latest",
		"react-dom": "latest",
		"inquirer": "latest",
		"axios": "latest",
		"node-fetch": "latest"
	},
	"husky": {
		"deprecated": false
	}
}
