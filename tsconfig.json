{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node", "vitest/globals", "@testing-library/jest-dom"],
		"baseUrl": ".",
		"paths": { "@/*": ["src/*"] }
	},
	"include": ["src", "tests", "vitest.setup.ts"],
	"exclude": ["node_modules", "dist"]
}
